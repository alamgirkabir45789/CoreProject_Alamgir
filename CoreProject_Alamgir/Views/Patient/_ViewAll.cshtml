@model IEnumerable<CoreProject_Alamgir.Models.Patient>

    <div class="col-md-8 offset-md-2">

        <h1 class="text-center"><i class="fas fa-comments-dollar text-success"></i> Patient History</h1>


        <table class="table table-hover table-bordered table-striped">
            <thead class="thead-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PatientName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ContactNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AppointmentDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Department)
                    </th>
                    <th>
                        <a onclick="showInPopup('@Url.Action("AddOrEdit","Patient",null,Context.Request.Scheme)','New Patient Registration')" class="btn btn-default glyphicon-text-background"><i class="fas fa-random"></i>Add New Patient</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PatientName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AppointmentDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        <div>
                            <form asp-action="Delete" asp-route-id="@item.PatientID" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                <a onclick="showInPopup('@Url.Action("AddOrEdit","Patient",new {id=item.PatientID},Context.Request.Scheme)','Update Patient Information')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Edit</a>

                                <input type="hidden" asp-for="@item.PatientID" />
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>